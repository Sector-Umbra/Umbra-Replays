@using SU.Replays.Helpers
@inherits LayoutComponentBase

@inject SiteConfigHelper SiteConfigHelper

<div id="header">
    <img src="https://sector-umbra.net/logo_small.png" alt="Sector Umbra logo" class="logo">
    <h1 class="title"><a href="/">Sector Umbra Replays</a></h1>
</div>

<div id="content">
    @Body
</div>

@{
    var footer = SiteConfigHelper.BuildFooter();
    if (footer != null)
    {
        <div id="footer">
            <p>@footer</p>
        </div>
    }
}